; Simple Loop Test

; Initialize counter and limit
mov R1, 0        ; Counter
mov R2, 5        ; Limit (small number for easier debugging)

loop_start:
    
	; Increment counter
    add R1, 1
    
    ; Print the new counter value to verify increment
    mov S1, R1
    mov S0, 1
    syscall
    
    ; Compare with limit
    cmp R1, R2
    
    ; Jump if counter < limit
    jl loop_start
    
    ; Print a value to show we've exited the loop
    mov S1, 999
    mov S0, 1
    syscall

    call print_loop_start

; call test_func


; Exit
mov S1, 0
mov S0, 3
syscall

hello_world:

function test_func:

    lidx R5 hello_world

    mov S1 R5
    mov S0 4
    syscall

    ret

function print_loop_start:
    lidx R5 loop_start

    mov S1 R5
    mov S0 4
    syscall

    ret